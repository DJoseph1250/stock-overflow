<div>
  <%= render "layouts/nav" %>

  <div class="dashboard"m>
    <div id="orders_chart" style="width: 100%; height: 400px;"></div>

    <table class="pretty">
      <!-- Orders table code here -->
    </table>
    <script type="text/javascript" charset="utf-8">
    $(function () {
      new Highcharts.StockChart({
        chart: { renderTo: 'orders_chart' },
        rangeSelector: {
          selected: 0
        },
        title: { text: 'Stock Trends' },
        xAxis: { 
          type: 'datetime'
        },
        yAxis: {
          title: { text: 'Stock Price'}
        },
        series: [{
          pointInterval: <%= 1.day * 1000 %>,
          pointStart: <%= 1.year.ago.to_i * 1000 %>,
          data: <%= @stock.prices %>,
          tooltip: {
            valueDecimals: 3
          }
        }]
      });
    });
    </script>
  </div>v
</div>
